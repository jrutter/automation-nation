<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Reports | Automation Reporting</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <!-- <link rel="stylesheet" href="/css/main.css" /> -->
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-S8G07DD98J"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-S8G07DD98J");
    </script>
  </head>
  <body>
    <div
      class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow"
    >
      <h5 class="my-0 mr-md-auto font-weight-normal logo">
        <a href="/">Automation Nation</a>
      </h5>
    </div>

    <div class="container">
      <h3>Test: <%= data.testId %></h3>
      <h3>Requested By: <%= data.requestedBy %></h3>
      <h3>Type: <%= data.type %></h3>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">campaign</th>
              <th scope="col">brand</th>
              <th scope="col">responseCode</th>
              <th scope="col">stepName</th>
              <th scope="col">step</th>
              <th scope="col">screenshot</th>
              <th scope="col">startUrl</th>
              <th scope="col">endUrl</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((obj) => { %>
            <tr>
              <td>
                <a href="/reports/<%= obj._id %>"><%= obj.testId %></a>
              </td>
              <td><%= obj.campaign %></td>
              <td><%= obj.brand %></td>
              <td><%= obj.responseCode %></td>
              <td><%= obj.stepName %></td>
              <td><%= obj.step %></td>
              <td><a href="<%= obj.screenshot %>">screenshot</a></td>
              <td><%= obj.startUrl %></td>
              <td><%= obj.endUrl %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <footer class="text-muted mt-5">
      <div class="container">
        <p>Oh BB.</p>
      </div>
    </footer>
  </body>
</html>
